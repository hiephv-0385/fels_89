<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home_page_name"), root_path %></li>
        <li><%= link_to t("about_page_title"), about_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account_title" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("setting_title"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout_title"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("signup_title"), signup_path %></li>
          <li><%= link_to t("login_title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
